@model S_Buck_HW_4.Models.Database.UserStockFavorite

@{
    ViewData["Title"] = "Favorite " + Html.DisplayTextFor(model => model.Symbol);
}

<h1>Add to Favorites: @Html.DisplayFor(model => model.Symbol) (@ViewBag.CompanyName)</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddFavorite">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserID" class="control-label">User Name</label>
                <select asp-for="UserID" class="form-control" asp-items="ViewBag.Users"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Favorite" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
