@model IEnumerable<S_Buck_HW_4.Models.Database.StockCompany>

@{
    ViewData["Title"] = "Symbols";
}


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Symbol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Symbol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { symbol = item.Symbol })
                |
                @Html.ActionLink("Buy", "Buy", new { symbol = item.Symbol })
            </td>
        </tr>
}
    </tbody>
</table>
